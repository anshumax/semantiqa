{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "paths": {
      "@semantiqa/storage-sqlite": ["../storage/sqlite/src"],
      "better-sqlite3": ["../storage/sqlite/node_modules/@types/better-sqlite3"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}

